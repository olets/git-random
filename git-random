#!/usr/bin/env bash

# git-random
# v1.0.0-beta.1
# May 2 2018
# https://github.com/olets/git-random
# Copyright (Â©) 2018-present Henry Bley-Vroman

__git_random_main() {
	local -i stash
	local guid
	local file_path

	stash=0

	# the following is BSD/Mac-friendly
	# the `env LC_CTYPE=C` can be dropped on other systems
	guid=$(env LC_CTYPE=C tr -dc '[:alnum:]' < /dev/urandom | dd bs=4 count=8 2>/dev/null)

	if [[ -z "$guid" ]]; then
		printf "Error generating random string. Exiting\n"
		exit 1
	fi

	file_path="${guid}.txt"

	if [[ -n $(git diff --cached --name-only) ]]; then
		stash=1
		git stash --staged
	fi

	touch "$file_path"

	print "$guid" >> "$file_path"

	git add "$file_path"

	git commit -m "Random commit (${guid})"

	if (( stash )); then
		git stash pop
	fi
}

__git_random_main()
